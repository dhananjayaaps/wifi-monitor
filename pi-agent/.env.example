# Pi Agent Environment Configuration
# Copy this file to .env and update with your actual credentials

# Backend API URL
API_BASE_URL=http://localhost:5000/api/v1

# Authentication credentials (user account on the backend)
AUTH_EMAIL=admin@wifi.com
AUTH_PASSWORD=admin123

# Simulation mode (true for testing without hardware, false for real network scanning)
SIMULATION_MODE=true

# Scan intervals (in seconds)
SCAN_INTERVAL=30
STATS_INTERVAL=60

# Simulation settings (only used when SIMULATION_MODE=true)
SIMULATION_DEVICE_COUNT=5
SIMULATION_MIN_BYTES=1024
SIMULATION_MAX_BYTES=104857600
